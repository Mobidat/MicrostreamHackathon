<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?xdevuiml version="1.0"?>
<?template NONE?>
<?import com.vaadin.flow.component.button.Button?>
<?import com.vaadin.flow.component.html.H1?>
<?import com.vaadin.flow.component.html.H4?>
<?import com.vaadin.flow.component.html.Label?>
<?import com.vaadin.flow.component.orderedlayout.HorizontalLayout?>
<?import com.vaadin.flow.component.orderedlayout.VerticalLayout?>
<?import com.zillus.coronadiary.ui.MainLayout?>
<VerticalLayout xmlns:x="http://xml.xdev-software.com/xdevuiml" x:routeLayout="MainLayout" spacing="false" x:name="HomeView" x:route="">
    <x:constraints zpos="0" width="-1px" height="-1px" />
    <H1 x:name="headLine" text="Corona Diary">
        <x:constraints width="0px" alignment="CENTER" height="0px" flex-grow="0.0" />
        <x:styles>
            <entry name="font-family" value="times" />
            <entry name="color" value="Orange" />
        </x:styles>
    </H1>
    <H4 x:name="copyright" text="Copyright 2021 by Frank Zillus">
        <x:constraints width="0px" alignment="CENTER" height="-1px" flex-grow="0.0" />
    </H4>
    <HorizontalLayout x:name="horizontalLayoutPatients" padding="true">
        <x:constraints width="100%" height="-1px" flex-grow="0.0" />
        <Label x:name="lblPatients" text="# Patients">
            <x:constraints width="250px" alignment="CENTER" height="0px" flex-grow="0.0" />
        </Label>
        <Button x:themeVariants="LUMO_TERTIARY LUMO_SUCCESS" x:name="btnPatients" text="Patients">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#USER_HEART" />
            <x:constraints width="100%" alignment="CENTER" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
        <Button x:themeVariants="LUMO_TERTIARY LUMO_ERROR" x:name="btnPatientsDelete" text="Patients">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#TRASH" />
            <x:constraints width="100%" alignment="CENTER" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
    </HorizontalLayout>
    <HorizontalLayout x:name="horizontalLayoutMedicals" padding="true">
        <x:constraints width="100%" height="-1px" flex-grow="0.0" />
        <Label x:name="lblMedicals" text="# Medicals">
            <x:constraints width="250px" alignment="CENTER" height="0px" flex-grow="0.0" />
        </Label>
        <Button x:themeVariants="LUMO_TERTIARY LUMO_SUCCESS" x:name="btnMedicals" text="Medicals">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#HOSPITAL" />
            <x:constraints width="100%" alignment="CENTER" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
        <Button x:themeVariants="LUMO_TERTIARY LUMO_ERROR" x:name="btnMedicalsDelete" text="Medicals">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#TRASH" />
            <x:constraints width="100%" alignment="CENTER" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
    </HorizontalLayout>
    <HorizontalLayout x:name="horizontalLayoutEntries" padding="true">
        <x:constraints width="100%" height="-1px" flex-grow="0.0" />
        <Label x:name="lblEntries" text="# Entries">
            <x:constraints width="250px" alignment="CENTER" height="0px" flex-grow="0.0" />
        </Label>
        <Button x:themeVariants="LUMO_TERTIARY LUMO_SUCCESS" x:name="btnEntries" text="Entries">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#BOOK" />
            <x:constraints width="100%" alignment="CENTER" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
        <Button x:themeVariants="LUMO_TERTIARY LUMO_ERROR" x:name="btnEntriesDelete" text="Entries">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#TRASH" />
            <x:constraints width="100%" alignment="CENTER" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
    </HorizontalLayout>
</VerticalLayout>
